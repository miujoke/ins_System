<script>
    layui.use('carousel', function(){
        //轮播
        var carousel = layui.carousel;
        //建造实例
        carousel.render({
            elem: '#banner'
            ,width: '57.6%' //设置容器宽度
            ,height: '330px'
            ,arrow: 'always' //始终显示箭头
            //,anim: 'updown' //切换动画方式
        });
    });
    //下拉框
    layui.use(['form', 'layedit', 'laydate'], function(){});
    //日期时间
    layui.use('laydate', function(){
        var laydate = layui.laydate;
        //日期时间选择器
        laydate.render({
            elem: '#booking_start_time'
            ,type: 'datetime'
        });
        laydate.render({
            elem: '#booking_stop_time'
            ,type: 'datetime'
        });
    });


</script>
